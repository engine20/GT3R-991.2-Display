{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Squish",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c lua51 squish --minify-level=full --uglify --uglify-level=full && del /F /Q out.lua && ren out.lua.uglified Display_sq.lua"
      ],
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}\\Display"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
